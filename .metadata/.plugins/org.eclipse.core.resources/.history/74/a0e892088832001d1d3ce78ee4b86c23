server:
  port: 3333
spring:
  application:
    name: SPRING-CLOUD-API-GATEWAY
    
  cloud:
    gateway:
      routes:
      - id: stock-price-api
        uri: lb://STOCK-PRICE-APP
        predicates:
        - Path=/price/{companyName}
      - id: stock-calc-api
        uri: lb://STOCK-CALC-API
        predicates:
        - Path=/calc/{companyName}/{qnty}
          
